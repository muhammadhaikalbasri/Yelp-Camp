<% layout('layouts/boilerplate')%>
    <h1 class="text-center">Login</h1>
    <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">username</label>
            <input type="text" class="form-control" id="username" name="username" required area-describedby />
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required area-describedby />
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success">Login</button>
    </form>