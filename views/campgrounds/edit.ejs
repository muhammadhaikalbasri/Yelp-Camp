<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="campground[title]" area-describedby
                        value="<%= campground.title %>" />
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="title" name="campground[location]"
                        value="<%= campground.location %>" />
                </div>
                <div>
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" class="form-control" id="image" name="campground[image]"
                        value="<%= campground.image %>" />
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground Price</label>
                    <div class="input-group ">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
                            aria-describedby="price-label" value="<%= campground.price%>" name="campground[price]">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" placeholder="type here..."
                        name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="mb-3 mt-3 d-grid gap-2">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-warning">Back To Campground</a>
        </div>
    </div>